{
  "compilerOptions": {
    "target": "ES6",
    "module": "CommonJS",
    "esModuleInterop": true,

    // Emit
    "sourceMap": true,
    "removeComments": true,
    "outDir": "dist",

    // Type Checking
    "strict": true,
    "noImplicitAny": true,
    "noImplicitReturns": true
  },
  "include": ["src/**/*"]
}
